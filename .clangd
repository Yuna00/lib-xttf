CompileFlags:
  Add: 
    - -xc
    - -Wall
    - -std=c99
    - -I/usr/lib/gcc/x86_64-pc-linux-gnu/14.2.1/include
    - -I/usr/local/include
    - -I/usr/lib/gcc/x86_64-pc-linux-gnu/14.2.1/include-fixed
    - -I/usr/include
    - -Wconversion
    - -Wfloat-equal
    - -Wno-unused-const-variable
    - -Wno-sign-conversion
  Remove: 
    - -W*
    - -x*++
  Compiler: gcc

Style:
  QuotedHeaders: "inc/.*"
  AngledHeaders: "/usr/include/xcb/.*"

Index:
  StandardLibrary: true

Completion:
  AllScopes: Yes
  ArgumentLists: FullPlaceholders

Diagnostics:
  UnusedIncludes: Strict
